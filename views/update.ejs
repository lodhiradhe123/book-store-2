<%- include("./partials/header")%>
<!--  -->
<div
  style="
    width: 70%;
    height: 50%;
    display: flex;
    justify-content: center;
    padding-left: 30%;
  "
>
  <h1></h1>
  <form action="/updated/<%= index %>" method="post">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Book Name</label>
      <input
        name="bookname"
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        value="<%= book[index].bookname %>"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Book Title</label>
      <input
        name="booktitle"
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        value="<%= book[index].booktitle %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-check-label" for="exampleCheck1">Author</label>
      <input
        name="author"
        type="text"
        class="form-control"
        id="exampleCheck1"
        value="<%= book[index].author%>"
      />
    </div>
    <div class="mb-3">
      <label class="form-check-label" for="exampleCheck1">Discription</label>

      <textarea
        class="form-control"
        name="discription"
        id=""
        cols="20"
        rows="10"
        value="radhe radhe"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-secondary">Submit</button>
  </form>
</div>
<!--  -->
<%- include("./partials/footer")%>
